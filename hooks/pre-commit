#!/bin/sh

ps -ef | grep "python" | grep "MHacks" | grep -v grep | awk '{print $2}' | xargs kill -s kill;

(foreman start > /dev/null 2>&1) & sleep 1;

c=$(ps -ef | grep "python" | grep "MHacks" | grep -v grep | awk '{print $2}' | wc -l);

if [ "$c" -ne "0" ]; then
	ps -ef | grep "python" | grep "MHacks" | grep -v grep | awk '{print $2}' | xargs kill -s kill;
	exit 0;
else
	echo "Warning: Build Failing";
	ps -ef | grep "python" | grep "MHacks" | grep -v grep | awk '{print $2}' | xargs kill -s kill;
	exit 0;
fi